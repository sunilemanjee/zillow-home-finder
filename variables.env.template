# Zillow Elasticsearch Data Ingestion Configuration Template
# Copy this file to variables.env and fill in your actual values

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-elasticsearch-url:443
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key-here
INDEX_NAME=zillow-properties

# Data Source Configuration
DATA_URL=https://github.com/luminati-io/Zillow-dataset-samples/raw/main/zillow-properties-listing-information.7z
ARCHIVE_NAME=zillow-properties-listing-information.7z
EXTRACTED_FILE_NAME=zillow-properties-listing-information.csv

# Ingestion Parameters
CHUNK_SIZE=500
THREAD_COUNT=4

# Index Configuration
# Note: Shards and replicas are not configurable in Elasticsearch Serverless

# Search Template Configuration
SEARCH_TEMPLATE_NAME=zillow-property-search

# Azure Maps Configuration
AZURE_MAPS_SUBSCRIPTION_KEY=your-azure-maps-subscription-key-here

# LLM Configuration
LLM_URL=https://your-llm-endpoint/v1/chat/completions
LLM_MODEL=gpt-4
LLM_API_KEY=your-llm-api-key-here

# MCP Server Configuration
MCP_HOST=localhost
MCP_PORT=8000
